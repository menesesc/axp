{
  "name": "worker",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "bun run --hot src/index.ts",
    "dev:watcher": "WORKER_MODE=watcher bun run --hot src/index.ts",
    "dev:processor": "WORKER_MODE=processor bun run --hot src/index.ts",
    "dev:ocr": "WORKER_MODE=ocr bun run --hot src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target bun",
    "start": "bun run dist/index.js",
    "start:watcher": "WORKER_MODE=watcher bun run dist/index.js",
    "start:processor": "WORKER_MODE=processor bun run dist/index.js",
    "start:ocr": "WORKER_MODE=ocr bun run dist/index.js",
    "lint": "eslint src --ext .ts",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.958.0",
    "@aws-sdk/client-textract": "^3.958.0",
    "database": "workspace:*",
    "pdf-lib": "^1.17.1",
    "shared": "workspace:*",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.3.3"
  }
}
